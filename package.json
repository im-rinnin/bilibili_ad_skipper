{
  "name": "bilibili-ad-skipper",
  "version": "1.0.0",
  "description": "Chrome extension to automatically skip ads in Bilibili videos using AI subtitle analysis",
  "main": "content.js",
  "scripts": {
    "lint": "eslint content.js popup.js",
    "lint:fix": "eslint content.js popup.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "webpack",
    "dev": "echo 'Development mode - load extension manually in Chrome'"
  },
  "keywords": [
    "chrome-extension",
    "bilibili",
    "ad-skipper",
    "ai",
    "subtitles"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "content.js"
    ],
    "setupFilesAfterEnv": [],
    "transformIgnorePatterns": [
      "node_modules/(?!@google)"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.20.0"
  }
}
