{
  "manifest_version": 3,
  "name": "Bilibili Ad Skipper",
  "version": "1.0",
  "description": "Skips ads in Bilibili videos by analyzing subtitles with AI",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.bilibili.com/*",
    "https://aisubtitle.hdslb.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content.js"]
    }
  ]
}
